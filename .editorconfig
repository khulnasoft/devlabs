# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{java,kt,kts,groovy,scala,py,js,ts,tsx,jsx,json,xml,yml,yaml,md,html,css,scss,sass,less}]
indent_style = space
indent_size = 4

# 2 space indentation for specific files
[*.{yml,yaml}]
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Java-specific settings
[*.java]
indent_size = 4
continuation_indent_size = 8

# Kotlin-specific settings
[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 8

# Groovy-specific settings
[*.groovy]
indent_size = 4
continuation_indent_size = 8

# JavaScript/TypeScript settings
[*.{js,ts,tsx,jsx}]
indent_size = 2

# JSON settings
[*.json]
indent_size = 2

# YAML settings
[*.{yml,yaml}]
indent_size = 2

# Markdown settings
[*.md]
trim_trailing_whitespace = false

# Shell script settings
[*.sh]
indent_size = 2

# Gradle build files
[*.{gradle,gradle.kts}]
indent_size = 4

# Properties files
[*.properties]
indent_size = 2
