# Mend documentation: https://docs.mend.io/bundle/unified_agent/page/unified_agent_configuration_parameters.html

# Exclude integration tests and test-related files from analysis
excludes=**/*it-*.java **/*it-*.js **/*it-*.ts **/*test*

# Include all Java, JavaScript, and TypeScript files
includes=**/*.java **/*.js **/*.ts

# Disable file system scanning for faster analysis
fileSystemScan=False

# Resolve dependencies from Gradle and npm
gradle.resolveDependencies=True
npm.resolveDependencies=True

# Aggregate all modules into a single analysis unit
gradle.aggregateModules=True

# Use the Gradle wrapper for consistent builds
gradle.preferredEnvironment=wrapper

# Include inner modules as dependencies
gradle.innerModulesAsDependencies=True

# Ignore certain Gradle configurations
gradle.ignoredConfigurations=.*test.* .*bbt.*

# Exclude certain Gradle modules
gradle.excludeModules=.*it-.* .*khulnasoft-ws-generator.* .*khulnasoft-testing-ldap.* .*khulnasoft-testing-harness.*

# Resolve devDependencies from npm
npm.includeDevDependencies=False

# Resolve the npm lockfile
npm.resolveLockFile=True

# Run pre-step hooks for npm
npm.runPreStep=True

# Treat Yarn projects as npm projects
npm.yarnProject=True

# Perform case-insensitive glob matching
case.sensitive.glob=false

# Include all JAR files
archiveIncludes=**/*.jar

# Force an update of the unified agent
forceUpdate=true

# Check policies during analysis
checkPolicies=true

# Fail the build on policy violations
forceUpdate.failBuildOnPolicyViolation=false
